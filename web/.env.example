# Environment Variables (for future backend integration)

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ACP Configuration
NEXT_PUBLIC_ACP_VERSION=1.0
NEXT_PUBLIC_PLATFORM=moltbook

# Feature Flags
NEXT_PUBLIC_ENABLE_CLI_REGISTRATION=true
NEXT_PUBLIC_ENABLE_DOMAIN_VERIFICATION=false
NEXT_PUBLIC_ENABLE_SOCIAL_FEATURES=false

# Storage
NEXT_PUBLIC_STORAGE_TYPE=localStorage
# Options: localStorage, api, hybrid

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_POSTHOG_KEY=

# Development
NODE_ENV=development
