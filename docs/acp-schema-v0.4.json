{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://acp.dev/schema/v0.4.0",
  "title": "ACP Code Schema",
  "description": "Agent Code Protocol v0.4.0 - 模块化身份载体",
  "type": "object",
  "required": ["acp", "core"],
  "properties": {
    "acp": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "协议版本号"
    },
    "core": {
      "$ref": "#/$defs/Core"
    },
    "module:social": {
      "$ref": "#/$defs/ModuleSocial"
    },
    "module:finance": {
      "$ref": "#/$defs/ModuleFinance"
    },
    "module:contact": {
      "$ref": "#/$defs/ModuleContact"
    },
    "module:entry": {
      "$ref": "#/$defs/ModuleEntry"
    },
    "module:a2a": {
      "$ref": "#/$defs/ModuleA2A"
    }
  },
  "patternProperties": {
    "^module:[a-z][a-z0-9_-]*$": {
      "$ref": "#/$defs/CustomModule"
    }
  },
  "additionalProperties": false,

  "$defs": {
    "AccessLevel": {
      "type": "string",
      "enum": ["public", "verified", "private"],
      "default": "public"
    },

    "Core": {
      "type": "object",
      "required": ["id", "name", "capabilities", "owner", "sig"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_-]*:[a-zA-Z0-9_-]+$",
          "description": "Agent ID，格式：platform:name"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Agent 名称"
        },
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "一句话描述"
        },
        "avatar": {
          "type": "string",
          "format": "uri",
          "description": "头像 URL"
        },
        "capabilities": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1,
              "description": "能力列表（简写格式）"
            },
            {
              "type": "array",
              "items": { "$ref": "#/$defs/Capability" },
              "minItems": 1,
              "description": "能力列表（完整格式）"
            }
          ]
        },
        "owner": {
          "$ref": "#/$defs/Owner"
        },
        "sig": {
          "type": "string",
          "description": "对整个 Code 的签名"
        }
      },
      "additionalProperties": false
    },

    "Capability": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "能力名称"
        },
        "status": {
          "type": "string",
          "enum": ["active", "deprecated", "disabled"],
          "default": "active"
        },
        "since": {
          "type": "string",
          "format": "date",
          "description": "生效日期"
        },
        "until": {
          "type": ["string", "null"],
          "format": "date",
          "description": "失效日期，null 表示永久有效"
        }
      },
      "additionalProperties": false
    },

    "Owner": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Owner 名称"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Owner URL"
        },
        "verified_by": {
          "type": "string",
          "description": "验证平台"
        },
        "proof": {
          "$ref": "#/$defs/OwnerProof"
        }
      },
      "additionalProperties": false
    },

    "OwnerProof": {
      "type": "object",
      "required": ["type", "verify_at"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["bidirectional_link"],
          "description": "验证类型"
        },
        "verify_at": {
          "type": "string",
          "format": "uri",
          "description": "验证 URL（如 .well-known/acp-agents.json）"
        }
      },
      "additionalProperties": false
    },

    "ModuleSocial": {
      "type": "object",
      "properties": {
        "_access": { "$ref": "#/$defs/AccessLevel" },
        "karma": {
          "type": "integer",
          "minimum": 0,
          "description": "声誉分数"
        },
        "followers": {
          "type": "integer",
          "minimum": 0,
          "description": "关注者数量"
        },
        "following": {
          "type": "integer",
          "minimum": 0,
          "description": "关注数量"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "标签列表"
        },
        "verified_by": {
          "type": "string",
          "description": "验证平台"
        }
      },
      "additionalProperties": false
    },

    "ModuleFinance": {
      "type": "object",
      "properties": {
        "_access": { "$ref": "#/$defs/AccessLevel" },
        "chains": {
          "type": "array",
          "items": { "type": "string" },
          "description": "支持的链"
        },
        "addresses": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "各链的地址"
        },
        "primary": {
          "type": "string",
          "description": "首选链"
        },
        "accept": {
          "type": "array",
          "items": { "type": "string" },
          "description": "接受的币种"
        }
      },
      "additionalProperties": false
    },

    "ModuleContact": {
      "type": "object",
      "properties": {
        "_access": { "$ref": "#/$defs/AccessLevel" },
        "routes": {
          "type": "array",
          "items": { "$ref": "#/$defs/ContactRoute" },
          "description": "联系方式列表"
        }
      },
      "additionalProperties": false
    },

    "ContactRoute": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "description": "联系类型（如 moltbook_dm, email, telegram）"
        },
        "handle": {
          "type": "string",
          "description": "用户名/句柄"
        },
        "address": {
          "type": "string",
          "description": "地址（如邮箱）"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "链接"
        }
      },
      "additionalProperties": false
    },

    "ModuleEntry": {
      "type": "object",
      "required": ["source"],
      "properties": {
        "_access": { "$ref": "#/$defs/AccessLevel" },
        "source": {
          "type": "string",
          "format": "uri",
          "description": "动态信息源 URL"
        },
        "source_backup": {
          "type": "string",
          "format": "uri",
          "description": "备用信息源"
        },
        "homepage": {
          "type": "string",
          "format": "uri",
          "description": "主页 URL"
        },
        "skill_file": {
          "type": "string",
          "format": "uri",
          "description": "Skill 文档 URL"
        }
      },
      "additionalProperties": false
    },

    "ModuleA2A": {
      "type": "object",
      "properties": {
        "_access": { "$ref": "#/$defs/AccessLevel" },
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "是否启用 A2A 协议"
        },
        "agent_card_url": {
          "type": "string",
          "format": "uri",
          "description": "A2A AgentCard URL"
        }
      },
      "additionalProperties": false
    },

    "CustomModule": {
      "type": "object",
      "properties": {
        "_access": { "$ref": "#/$defs/AccessLevel" }
      },
      "additionalProperties": true,
      "description": "自定义模块，允许任意字段"
    }
  }
}
